<%- include('includes/head.ejs') %>
<link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>

<div id="feedDiv" class="container bg-light rounded-3">

  <div class="row">
    <div class="col-10"><%= message %></div><br>
    <div class="col-2">
      <form action="/" method="post">
        <Button> Logout </Button>
      </form>
    </div>
  </div>

  <div id="dateSelectionDiv">
    <form id="dateForm" class="text-center">
      <div>
        <label for="dateInput" class="form-label">Please choose a date:</label><br>
        <input type="date" id="dateInput" value="" min="" max="">
      </div><br>
      <button id="submitDateBtn" class="btn btn-primary">Send</button>
    </form>
  </div><br>

  <div id="postsDiv" class="container d-none">

    <!-- posts are displayed here -->

  </div><br>

  <div id="loadingGif" class="container text-center d-none">

    <img src="/assets/nasa-logo.gif" alt="nasa logo">

  </div>

  <div class="text-center">
    <button id="moreBtn" class="btn btn-primary">More</button>
  </div><br>

</div>

<script src="/javascripts/main.js"></script>
<%- include('includes/end.ejs') %>